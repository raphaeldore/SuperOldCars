@{
    ViewBag.Title = "Contactez nous!";
}

<div class="page-header">
    <hgroup class="title">
        <h1>@ViewBag.Title</h1>
        <h2>@ViewBag.Message</h2>
    </hgroup>
</div>

@if (ViewBag.MessageConfirmation != null)
{
    <div class="alert alert-success" role="alert">@ViewBag.MessageConfirmation</div>
}

<div class="row">

    <div id="map-frame" style="margin-bottom: 10px">
        <iframe src="https://www.google.com/maps/d/embed?mid=zy-Pxh1xPav0.k36wYs2A4zPQ" width="100%" height="500px" class="map"></iframe>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-lg-6">
            <div class="form-group">
                <label for="InputName">Votre nom</label>
                <div class="input-group">
                    <input type="text" class="form-control" name="InputName" id="InputName" placeholder="Enter Name" required>
                </div>
            </div>
            <div class="form-group">
                <label for="InputEmail">Votre courriel</label>
                <div class="input-group">
                    <input type="email" class="form-control" id="InputEmail" name="InputEmail" placeholder="Enter Email" required>
                </div>
            </div>
            <div class="form-group">
                <label for="InputMessage">Message</label>
                <div class="input-group">
                    <textarea name="InputMessage" id="InputMessage" class="form-control" rows="5" required></textarea>
                </div>
            </div>

            <input type="submit" name="submit" id="submit" value="Contact" class="btn btn-info pull-right">
        </div>
    }

    <hr class="featurette-divider hidden-lg">
    <div class="col-lg-5 col-md-push-1">
        <address>
            <h3>Où nous nous situons</h3>
            <p class="lead">
                <a href="https://goo.gl/maps/tgyUC">
                    Super Old Cars<br>
                    270 Boulevard Sir-Wilfrid-Laurier, Beloeil, QC J3G 4G7, Canada
                </a><br>
                Phone: 418-222-2222<br>
                Fax: Pas de fax!
            </p>
        </address>
    </div>
</div>
