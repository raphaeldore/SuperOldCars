@using SuperOldCars.Web.Helpers
@model SuperOldCars.Web.Models.Car

@{
    ViewBag.Title = "Supprimer";
}

<div class="page-header">
    <h2>@ViewBag.Title</h2>
    <h3>@Html.DisplayFor(model => model.TitreAnnonce)</h3>
</div>

<div class="form-group" style="text-align: center">
    @Html.PlaceholderCarImage(Model.Marque, Model.Modele, 800, 250)
</div>

<div class="col-xs-6">
    <dl class="dl-horizontal">
        <dt>@Html.LabelFor(model => model.Marque)</dt>
        <dd>@Html.DisplayFor(model => model.Marque)</dd>
        <dt>@Html.LabelFor(model => model.Modele)</dt>
        <dd>@Html.DisplayFor(model => model.Modele)</dd>
        <dt>@Html.LabelFor(model => model.Annee)</dt>
        <dd>@Html.DisplayFor(model => model.Annee)</dd>
        <dt>@Html.LabelFor(model => model.Proprietaire)</dt>
        <dd>@Html.DisplayFor(model => model.Proprietaire)</dd>
    </dl>
</div>

<div class="col-xs-6">
    <dl class="dl-horizontal">
        <dt>@Html.LabelFor(model => model.Telephone)</dt>
        <dd>@Html.DisplayFor(model => model.Telephone)</dd>
        <dt>@Html.LabelFor(model => model.Prix)</dt>
        <dd>@Html.FormatMoney(Model.Prix)</dd>
        <dt>@Html.LabelFor(model => model.Negociable)</dt>
        <dd>@Html.FormatBool(Model.Negociable)</dd>
        <dt>@Html.LabelFor(model => model.Conditions)</dt>
        <dd>@Html.FormatBool(Model.Conditions)</dd>
    </dl>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="row-fluid">
        <p>
            @Html.DisplayFor(model => model.Information)
        </p>

        <p>
            <button type="submit" class="btn btn-danger" value="Delete">Supprimer</button> |
            @Html.ActionLink("Retour à la liste", "Index")
        </p>

    </div>

